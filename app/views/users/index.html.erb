<div class="jumbotron jumbotron-fluid">
  <div class="container-fluid">
    <h1 class="display-4 font-weight-bold">MemeStr</h1>
    <p class="lead">Explore the world of Memes!</p>
  </div>
</div>


<h2>Explore</h2>

    <h4 class="text-right">Recent MemeStrs</h4>
<ul class="text-right">
    <% @users.each do |u| %>
        <li class="text-right">
            <%= link_to(u.username, user_path(u)) %>
        </li>
        
    <% end %>    
</ul>

<h4>Recent Memes</h4>
<div class="container">
    <div class="row">
    <% @featured.in_groups_of(3, '&nbsp;') do | m1, m2, m3 |%>
        <div class="col-sm">
            <div class="card" style="width: 18rem;">
                <%= link_to image_tag(m1.url, class: "card-img-top"), user_path(m1.user) %>
                <div class="card-body">
                    <p class="card-text"><%= m1.caption %></p>
                </div>
            </div>
        </div>
        
        <div class="col-sm">
            <div class="card" style="width: 18rem;">
                <%= link_to image_tag(m2.url, class: "card-img-top"), user_path(m2.user) %>
                <div class="card-body">
                    <p class="card-text"><%= m2.caption %></p>
                </div>
            </div>
        </div>
        <div class="col-sm">
            <div class="card" style="width: 18rem;">
                <%= link_to image_tag(m3.url, class: "card-img-top"), user_path(m3.user) %>
                <div class="card-body">
                    <p class="card-text"><%= m3.caption %></p>
                </div>
            </div>
        </div>
    <% end %>
    </div>
</div>


        
