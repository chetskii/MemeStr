<h1 class="mb-5"> 
    <%= @user.username %>'s memes 
</h1>

<div class="container">
    <% @user.memes.each do |m| %>
    <div class="row mb-5">
        <div class="col-sm">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src=<%=  m.url %> alt="Card image cap">
                <div class="card-body">
                    <p class="card-text"><%= m.caption %></p>
                </div>
            </div>
                <% if current_user == @user %>
                <%= link_to "/memes/#{m.id}", method: 'delete' do %>
                    <button type="button" class="btn btn-outline-secondary">Remove</button>
                <% end %>
                <%= link_to edit_meme_path(m), method: 'edit' do %>
                    <button type="button" class="btn btn-outline-secondary">Edit</button>
                <% end %>
                <% end %>
        </div>
        <div class="col-sm">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src=<%=  m.url %> alt="Card image cap">
                <div class="card-body">
                    <p class="card-text"><%= m.caption %></p>
                </div>
            </div>
                <% if current_user == @user %>
                <button type="button" class="btn btn-outline-secondary"><%= link_to("Remove", "/memes/#{m.id}", method: 'delete') %></button>
                <button type="button" class="btn btn-outline-secondary"><%= link_to("Edit", edit_meme_path(m)) %></button>
                <% end %>
        </div>
        <div class="col-sm">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src=<%=  m.url %> alt="Card image cap">
                <div class="card-body">
                    <p class="card-text"><%= m.caption %></p>
                </div>
            </div>
                <% if current_user == @user %>
                <button type="button" class="btn btn-outline-secondary"><%= link_to("Remove", "/memes/#{m.id}", method: 'delete') %></button>
                <button type="button" class="btn btn-outline-secondary"><%= link_to("Edit", edit_meme_path(m)) %></button>
                <% end %>
        </div>
    </div>
    <% end %>
</div>

