<h1 class="mb-5"> 
    <%= @user.username %>'s memes 
</h1>

<div class="container">
    <% @user.memes.in_groups_of(3) do | m1, m2, m3 | %>
    <div class="row mb-5">
        <div class="col-sm">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src=<%= m1.url %> alt="Card image cap">
                <div class="card-body">
                    <p class="card-text"><%= m1.caption %></p>
                </div>
            </div>
                <% if current_user == @user %>
                <%= link_to "/memes/#{m1.id}", method: 'delete' do %>
                    <button type="button" class="btn btn-outline-secondary">Remove</button>
                <% end %>
                <%= link_to edit_meme_path(m1)  do %>
                    <button type="button" class="btn btn-outline-secondary">Edit</button>
                <% end %>
                <% end %>
        </div>
        <div class="col-sm">
            <% if m2 %>
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src=<%= m2.url %> alt="Card image cap">
                <div class="card-body">
                    <p class="card-text"><%= m2.caption %></p>
                </div>
            </div>
                <% if current_user == @user %>
                <%= link_to "/memes/#{m2.id}", method: 'delete' do %>
                    <button type="button" class="btn btn-outline-secondary">Remove</button>
                <% end %>
                <%= link_to edit_meme_path(m2) do %>
                    <button type="button" class="btn btn-outline-secondary">Edit</button>
                <% end %>
                <% end %>
            <% end %>
        </div>
        <div class="col-sm">
            <% if m3 %>
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src=<%= m3.url %> alt="Card image cap">
                <div class="card-body">
                    <p class="card-text"><%= m3.caption %></p>
                </div>
            </div>
                <% if current_user == @user %>
                <%= link_to "/memes/#{m3.id}", method: 'delete' do %>
                    <button type"button" class="btn btn-outline-secondary">Remove</button>
                <% end %>
                <%= link_to "/memes/#{m3.id}" do %>
                    <button type="button" class="btn btn-outline-secondary">Edit</button>
                <% end %>
                <% end %>
            <% end %>
        </div>
    </div>
    <% end %>
</div>

